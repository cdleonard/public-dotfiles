// See https://code.visualstudio.com/docs/getstarted/keybindings#_advanced-customization
[
    // From: https://github.com/microsoft/vscode/issues/75548
    {
        "key": "pageup",
        "command": "-workbench.action.terminal.scrollUpPage",
        "when": "terminalFocus"
    },
    {
        "key": "pagedown",
        "command": "-workbench.action.terminal.scrollDownPage",
        "when": "terminalFocus"
    },
    {
        "key": "shift+pageup",
        "command": "workbench.action.terminal.scrollUpPage",
        "when": "terminalFocus"
    },
    {
        "key": "shift+pagedown",
        "command": "workbench.action.terminal.scrollDownPage",
        "when": "terminalFocus"
    },
    // reRunTask
    {
        "key": "ctrl+cmd+b",
        "command": "workbench.action.tasks.reRunTask"
    },
    // default ctrl-r openRecent overlaps vscodevim
    {
        "key": "ctrl+cmd+r",
        "command": "workbench.action.openRecent"
    },
    // switch diff panes using vim-like shortcuts.
    {
        "key": "ctrl+w right",
        "command": "workbench.action.compareEditor.focusPrimarySide"
    },
    {
        "key": "ctrl+w left",
        "command": "workbench.action.compareEditor.focusOtherSide"
    },
    // Toggle sidebar with mac-style shortcuts
    {
        "key": "cmd+b",
        "command": "workbench.action.toggleSidebarVisibility"
    },
    {
        "key": "cmd+j",
        "command": "workbench.action.togglePanel"
    },
    // Toggle maximized panel
    {
        "key": "shift+cmd+j",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    // Both unix-like and mac-like copy-paste for terminal
    {
        "key": "meta+c",
        "command": "workbench.action.terminal.copySelection",
        "when": "terminalFocus && terminalHasBeenCreated && terminalTextSelected || terminalFocus && terminalProcessSupported && terminalTextSelected"
    },
    {
        "key": "ctrl+shift+c",
        "command": "workbench.action.terminal.copySelection",
        "when": "terminalFocus && terminalHasBeenCreated && terminalTextSelected || terminalFocus && terminalProcessSupported && terminalTextSelected"
    },
    {
        "key": "meta+v",
        "command": "workbench.action.terminal.paste",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    },
    {
        "key": "ctrl+shift+v",
        "command": "workbench.action.terminal.paste",
        "when": "terminalFocus && terminalHasBeenCreated || terminalFocus && terminalProcessSupported"
    }
]
